generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Firm {
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  glApiToken String?
  name       String
  updatedAt  DateTime @updatedAt
  users      User[]
}

model User {
  createdAt DateTime @default(now())
  firm      Firm     @relation(fields: [firmId], references: [id])
  firmId    String
  id        String   @id @default(cuid())
  password  String
  updatedAt DateTime @updatedAt
  username  String   @unique
}
